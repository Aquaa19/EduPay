<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/card_background_expanded"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvStudentNameExpanded"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:text="Student Name"/>

        <ImageButton
            android:id="@+id/btnDeleteStudent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_delete"
            android:tint="?attr/colorOnSurface"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Delete Student"
            android:layout_marginStart="8dp"/>

        <ImageView
            android:id="@+id/ivExpandCollapseExpanded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:tint="?attr/colorOnSurface"
            android:contentDescription="Expand/Collapse"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp">
        <TextView
            android:id="@+id/tvGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender: Male"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:id="@+id/tvMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile: +91 XXXXXXXX"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:id="@+id/tvGuardianMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardian: +91 YYYYYYYY"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="4dp"/>
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:scrollbars="none">
        <LinearLayout
            android:id="@+id/llMonthBarExpanded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>
